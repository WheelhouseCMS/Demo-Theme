- title ["Archive: #{Date::MONTHNAMES[@month]} #{@year}", @blog.title, site.name].join(' - ')
- breadcrumb "Archive: #{Date::MONTHNAMES[@month]} #{@year}"

#content
  %h2.title= node.title

  %p.breadcrumbs
    = breadcrumbs :style => :inline, :separator => "&raquo;"
    
  %article
    = render :partial => "post", :collection => @posts
  
  = render "sidebar"
