- template.name = "Default Page"
- title [@page.title, site.name].join(' - ')

#content
  %h2.title= node.title

  %p.breadcrumbs
    = breadcrumbs :style => :inline, :separator => "&raquo;"
    
  %article
    = @page.content
    
  %aside#sidebar
    - if @page.children.any?
      %section
        %h4 Subnavigation
        %nav= navigation :root => @page.root, :depth => 0
    
    - @page.loop("Sidebars") do |sidebar|
      %section
        = sidebar.content :rows => 15
    
    .bottom
    