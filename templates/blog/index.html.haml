- template.name = "Blog"
- template.resource = Blog::Blog
- title [@blog.title, site.name].join(' - ')

#content
  %h2.title= node.title

  %p.breadcrumbs
    = breadcrumbs :style => :inline, :separator => "&raquo;"
    
  %article
    = render :partial => "post", :collection => @blog.posts
    
  = render "sidebar"
  